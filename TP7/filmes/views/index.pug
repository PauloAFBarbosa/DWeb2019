extends layout

block content
  h1 Filmes
  .w3-container
        .w3-card-4
            header.w3-container
            .w3-container
                form.w3-container(action='/' method='POST' id='form1')
                    label
                        b Titulo
                    input.w3-input.w3-border(type='text' name='title' id='title' )
                    label
                        b Ano
                    input.w3-input.w3-border(type='text' name='year' id='year' )
                    input.w3-btn.w3-blue-grey(name="enviar" type='submit' value='Enviar')
            .w3-card-4
                table.w3-table-all
                    tr  
                        th ID
                        th Titulo
                        th Ano
                    each a in lista
                        tr
                            td= a._id
                            td= a.title
                            td= a.year
                            td
                                button.w3-button.w3-circle(onclick="apagaFilme('" + a._id + "')") Apagar
                                button.w3-button.w3-circle(onclick="showFilme('" + a._id + "')") Editar/Ver

            footer.w3-container
                address Gerado por Gest√£o de Arquivo Sonoro


