extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container
                h3 Registar Tarefa
            .w3-container
                form.w3-container(action="/add" method='POST')
                    label
                        b Tarefa
                    input.w3-input.w3-border(type="text" name="tarefa")
                    label
                        b Data Limite
                    input.w3-input.w3-border(type="date" name="data")
                    input.w3-btn-w3-blue-grey(type="submit" value="Enviar")
            footer.w3-container.w3-yellow
        hr
        .w3-card-4
            header.w3-container
                h3 Tarefas
            .w3-container
                table.w3-table-all
                    tr
                        th Tarefa
                        th Data
                    each t in lista
                        tr
                            td= t.tarefa
                            td= t.data
            footer.w3-container
                address Gerado por Paulo Barbosa